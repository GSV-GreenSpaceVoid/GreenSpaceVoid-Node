<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.MariaDB53Dialect
        </property>

        <property name = "hibernate.connection.driver_class">
            org.mariadb.jdbc.Driver
        </property>

        <!-- Assume test is the database name -->
        <property name="hibernate.id.new_generator_mappings">
            false
        </property>



        <property name = "hibernate.connection.url">
            jdbc:mariadb://localhost/system
        </property>

        <property name = "hibernate.connection.username">
            root
        </property>

        <property name = "hibernate.connection.password">
            test1234
        </property>

        <!-- List of XML mapping files -->
        <mapping class="com.greenspacevoidnode.sql.TestClass"/>
        <mapping class="com.greenspacevoidnode.sql.ChildTestClass"/>
        <mapping class="com.greenspacevoidnode.sql.GrandChildTestClass"/>
        <mapping class="com.greenspacevoidnode.sql.OtherGrandChildClass"/>
        <mapping class="com.greenspacevoidnode.sql.PersistenceObject"/>
        <mapping class="com.greenspacevoidnode.sql.StoredObject"/>
    </session-factory>
</hibernate-configuration>